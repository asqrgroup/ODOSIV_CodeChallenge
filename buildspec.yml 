version: 0.2

phases:
  install:
    commands:
      - echo "Nothing to install"
  pre_build:
    commands:
      - echo "Build started on $(date)"
  build:
    commands:
      - echo "No build required (docker-compose will run on EC2)"
  post_build:
    commands:
      - echo "Build completed on $(date)"

artifacts:
  files:
    - appspec.yml
    - docker-compose.yml
    - Dockerfile
    - scripts/**/*   # all scripts
    - '**/*'         # fallback (keeps other files if needed)
  base-directory: .
  discard-paths: no
  name: odosiv-dev-build-artifact
